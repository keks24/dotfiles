# global
set database "null"
set guioptions "svh"
set first-page-column "1:1"

# normal mode
map [normal] b adjust_window "best-fit"
map [normal] w adjust_window "width"
map [normal] f toggle_fullscreen
map [normal] F follow
map [normal] i recolor
map [normal] r reload
map [normal] R rotate
map [normal] z zoom in
map [normal] Z zoom out

# fullscreen mode
map [fullscreen] b adjust_window "best-fit"
map [fullscreen] w adjust_window "width"
map [fullscreen] f toggle_fullscreen
map [fullscreen] F follow
map [fullscreen] i recolor
map [fullscreen] r reload
map [fullscreen] R rotate
map [fullscreen] z zoom in
map [fullscreen] Z zoom out
